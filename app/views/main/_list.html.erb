<div class="accordion-item">
  <h2 class="accordion-header" id="heading<%= i %>">
    <%= link_to list.name, "/#{list.id}", class: 'accordion-button bg-dark text-light text-decoration-none', role: :button, data:{toggle: :collapse, target: '#collapse'}, aria:{expanded: true, control: "collapse#{i}"}%>
  </h2>
  <div id="collapse<%= i %>" class="accordion-collapse collapse show" aria-labelledby="heading<%= i %>" data-bs-parent="#accordi<%= i %>xample">
    <div class="accordion-body position-relative">
      <%if defined?(todos)%>
        <ul class="list-group">
          <%todos.each do |todo|%>
            <%= render "todo", todo: todo%>
          <%end%>
        </ul>
      <%end%>
      <%if @selected_list_id.to_i == list.id.to_i %>
        <%=form_with url:'/add_todo' do |f|%>
          <div class="mt-3 container w-50">
            <div class="mb-1">
              <%=f.label :title, :Todo, class:"form-label"%>
              <%= f.text_field :title, class:"form-control", placeholder:'Title of Todo'%>
            </div>
            <div class="mb-1">
              <%=f.label :body, :Details, class:"form-label"%>
              <%= f.text_area :body, class:"form-control", placeholder:'Deatils of Todo (OPTIONAL)', size:'30x3'%>
            </div>
            <div class="mb-1 w-50 m-auto">
              <%=f.label :deadline, :Deadline, class:'form-label' %>
              <%= f.datetime_local_field :deadline %>
            </div>
            <div class="mb-1 w-50 m-auto">
              <%= f.hidden_field :list_id, value: @selected_list_id %>
            </div>
            <%= f.submit :submit, class:'btn btn-dark mx-auto'%>
          </div>
        <%end%>
        <div style="position: absolute;bottom: 40px;left: 40px;border-radius: 50%;font-size: 30px;color: white;width: 44px;text-align: center;font-weight:bold" class="bg-dark">
          <%=form_with url:"/delete_list/#{list.id}", method: :delete do |f|%>
            <%=f.submit '+', style:"background-color:transparent; border:none; color:inherit"%>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>