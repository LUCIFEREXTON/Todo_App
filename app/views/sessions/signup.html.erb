<h1>New user</h1>
<div>
  <%= link_to "Already have an account? Sign In", signin_path %>
</div>
<div class="container-fluid vh-100 d-flex justify-content-center align-items-center position-absolute top-0" style="z-index:-1;">
  <%= form_with model:@user, url: signup_path, class:"row" do|f|%>
    <div class="mb-3">
      <%= f.label :name, 'Unique Name', class:'form-label'%>
      <%=f.text_field :name, class:'form-control', placeholder:'Input your Unique Username'%>
    </div>
    <div class="mb-3">
      <%= f.label :password, 'Password', class:'form-label'%>
      <%=f.password_field :password, class:'form-control', placeholder:'Input your Unique Username'%>
    </div>
    <div class="mb-3">
      <%= f.label :password_confirmation, 'Confirm Password', class:'form-label'%>
      <%=f.password_field :password_confirmation, class:'form-control', placeholder:'Write same password as above'%>
    </div>    
    <div class="col-auto">
      <%=f.submit :Signin, class:'btn btn-dark'%>
    </div>
  <%end%>
</div>